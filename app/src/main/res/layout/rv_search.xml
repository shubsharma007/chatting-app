<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dpSearch"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        app:civ_border_color="@color/blacklight"
        app:civ_border_width="1dp"
        android:src="@drawable/smiling"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="tulsi das khan"
        android:textStyle="bold"
        android:id="@+id/nameSearch"
        android:layout_marginHorizontal="10dp"
        android:ellipsize="end"
        android:textSize="21sp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/dpSearch"
        app:layout_constraintEnd_toStartOf="@+id/sayHiButton"
        app:layout_constraintStart_toEndOf="@+id/dpSearch"
        app:layout_constraintTop_toTopOf="@+id/dpSearch" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sayHiButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        android:text="say Hi"
        android:fontFamily="@font/amarante"
        android:textStyle="bold"
        android:background="@drawable/btn_yellow"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/blacklight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>